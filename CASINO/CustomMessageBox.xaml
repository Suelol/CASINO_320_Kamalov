<Window
    x:Class="CASINO.CustomMessageBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CASINO"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Сообщение"
    Width="400"
    Height="200"
    AllowsTransparency="True"
    Background="White"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border Background="White" CornerRadius="10" BorderBrush="#3F51B5" BorderThickness="2" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock x:Name="MessageText" Text="Сообщение" FontSize="18" FontWeight="Bold" 
                       Foreground="#3F51B5" TextAlignment="Center" VerticalAlignment="Center" Grid.Row="0" Margin="0,0,0,20"/>

            <Button Content="OK" Width="100" Background="#3F51B5" Foreground="White" 
                    Click="OkButton_Click" HorizontalAlignment="Center" Grid.Row="1" />
        </Grid>
    </Border>
</Window>
